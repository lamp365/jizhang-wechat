/* pages/addrecord/index.wxss */

.category-wrap {
  display: flex;
  flex-wrap: wrap;
  background: white;
}

.category-item {
  padding: 1vw;
  text-align: center;
}

.category-item-img {
  width: 8vw;
  height: 8vw;
  border-radius: 50%;
}

.category-item-name {
  font-size: 3vw;
  color: #797979;
}

.wrap {
  height: 100vh;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.tabs-wrap {
  flex-grow: 1;
  background: white;
  border-bottom: #eee 1px solid;
}
.info-wrap-left{
  display: flex;
}
.info-icon{
  align-items: center;
  width: 10vw;
  height: 10vw;
  border-radius: 50%;
  margin-right: 2vw;
}
.info-wrap{
  display: flex;
  justify-content: space-between;
  padding: 4vw 2vw;
  align-items: center;
  border-bottom: #eee 1px solid;
}
.info-money{
  font-size: 5vw;
  color: #797979;
}
.info-category{
  font-size: 4vww;
  color: #797979;
  display: flex;
  align-items: center;
}

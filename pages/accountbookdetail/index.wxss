/* pages/accountbookdetail/index.wxss */
.item{
  background: white;
  display: flex;
  align-items: center;
}
.left-wrap{
  justify-content: space-between;
  flex-grow: 1;
  display: flex;
  align-items: center;
}
.item-img{
  width: 15vw;
  height: 15vw;
  border-radius: 50%;
  margin-left: 3vw;
}
.item-name{
  display: flex;
  align-items: center;
  height: 20vw;
  font-size: 4vw;
  color: #333;
  margin-left: 3vw;
  flex-grow: 1;
  border-bottom: #efefef 2rpx solid;
}

.item-icon{
  width: 4vw;
  height: 4vw;
  padding: 2vw;
}
.item:last-child .item-name{
  border-bottom: none;
}
.btn-wrap{
  margin: 8vw; 
}
.item-admin{
  color: goldenrod;
}
